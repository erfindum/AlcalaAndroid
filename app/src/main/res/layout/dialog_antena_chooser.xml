<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="10dp"
    >
    <TextView
        android:id="@+id/dialogAntenaTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:text="@string/lectura_tÃ­tulo"
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        />

    <RadioGroup
        android:id="@+id/dialogAntenaRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/dialogAntenaTitle"
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        >

        <RadioButton
            android:id="@+id/dialogAntenaAberingRadio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_marginBottom="10dp"
            android:background="@android:color/white"
            android:text="@string/antena_1_abering"
            />
        <RadioButton
            android:id="@+id/dialogAntenaWmbusRadio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:background="@android:color/white"
            android:text="@string/antena_2_wmbus"
            />

    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/dialogAntenaRadioGroup"
        >
        <Button
            android:id="@+id/dialogAntenaCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/cancel"
            />
        <Button
            android:id="@+id/dialogAntenaReading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/lectura_btn"
            />
    </LinearLayout>

</RelativeLayout>