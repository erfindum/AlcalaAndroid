<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/layoutTvCommunity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:padding="10dp" >

        <TextView
            android:id="@+id/tvCommunity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="COM" />
    </RelativeLayout>

    <ImageView
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:src="@android:color/black" />

    <RelativeLayout
        android:id="@+id/layoutTvProperty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:padding="10dp" >

        <TextView
            android:id="@+id/tvProperty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/finca_mayusculas" />
    </RelativeLayout>

    <ImageView
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:src="@android:color/black" />

    <RelativeLayout
        android:id="@+id/layoutTvName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="10dp" >

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/direccion_mayusculas" />
    </RelativeLayout>

    <ImageView
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:src="@android:color/black" />

    <RelativeLayout
        android:id="@+id/layoutChRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:padding="5dp" >

        <CheckBox
            android:id="@+id/chRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />
    </RelativeLayout>

</LinearLayout>