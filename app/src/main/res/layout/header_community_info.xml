<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/gris_alpha_opaco_background"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/layoutTvCommunity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:padding="10dp" >

        <TextView
            android:id="@+id/tvCommunity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="COM"
            android:textSize="18sp" />
    </RelativeLayout>

    <ImageView
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:src="@color/light_gray" />

    <RelativeLayout
        android:id="@+id/layoutTvName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:padding="10dp" >

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/direccion_mayusculas"
            android:textSize="18sp" />
    </RelativeLayout>

    <ImageView
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:src="@color/light_gray" />

    <RelativeLayout
        android:id="@+id/layoutDateState"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:padding="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="FECHA"
            android:textSize="16sp" />
    </RelativeLayout>

    <ImageView
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:src="@color/light_gray" />

    <RelativeLayout
        android:id="@+id/layoutFloorsState"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:padding="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="PISOS"
            android:textSize="18sp" />
    </RelativeLayout>

</LinearLayout>