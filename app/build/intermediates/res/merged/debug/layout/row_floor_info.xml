<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/layoutTvOwner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:padding="10dp" >

        <TextView
            android:id="@+id/tvOwner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="COM"
            android:textSize="20sp" />
    </RelativeLayout>

    <ImageView
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:src="@color/light_gray" />

    <RelativeLayout
        android:id="@+id/layoutTvFloor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:padding="10dp" >

        <TextView
            android:id="@+id/tvFloor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/direccion_mayusculas"
            android:textSize="20sp" />
    </RelativeLayout>

    <ImageView
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:src="@color/light_gray" />

    <RelativeLayout
        android:id="@+id/layoutRadio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:padding="5dp" >

        <TextView
            android:id="@+id/tvRadio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="R"
            android:textColor="@color/state_red"
            android:textSize="28sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <ImageView
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:src="@color/light_gray" />

    <RelativeLayout
        android:id="@+id/layoutReadingsState"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:padding="5dp" >

        <ImageView
            android:id="@+id/imgReadingsState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/state_red" />
    </RelativeLayout>

</LinearLayout>